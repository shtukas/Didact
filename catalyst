#!/usr/bin/ruby

# encoding: UTF-8

require_relative "Libs/loader.rb"

# ----------------------------------------------------------------------------

Thread.new {
    loop {
        sleep 300
        system("#{File.dirname(__FILE__)}/vienna-import")
    }
}

loop {
    domain = Domain::getActiveExtendedDomain()
    dominantDomain = Domain::getDominantDomain()
    ns16s = NS16sOperator::ns16s(dominantDomain)
    UIServices::mainView(domain, dominantDomain, ns16s)
}
